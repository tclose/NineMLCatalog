<?xml version='1.0' encoding='UTF-8'?>
<NineML xmlns="http://nineml.net/9ML/2.0">
  <Unit symbol="Hz" dimension="per_time" power="0"/>
  <Selection name="All">
    <Concatenate>
      <Item index="0">
        <Reference name="Exc"/>
      </Item>
      <Item index="1">
        <Reference name="Inh"/>
      </Item>
    </Concatenate>
  </Selection>
  <Dimension name="per_time" t="-1"/>
  <Population name="Exc">
    <Size>4000</Size>
    <Cell>
      <DynamicsProperties name="nrn">
        <Definition name="LeakyIntegrateAndFire" url="../../neuron/LeakyIntegrateAndFire.xml"/>
        <Property name="R">
          <Quantity units="Mohm">
            <SingleValue>1.5</SingleValue>
          </Quantity>
        </Property>
        <Property name="refractory_period">
          <Quantity units="ms">
            <SingleValue>2.0</SingleValue>
          </Quantity>
        </Property>
        <Property name="tau">
          <Quantity units="ms">
            <SingleValue>20.0</SingleValue>
          </Quantity>
        </Property>
        <Property name="v_reset">
          <Quantity units="mV">
            <SingleValue>10.0</SingleValue>
          </Quantity>
        </Property>
        <Property name="v_threshold">
          <Quantity units="mV">
            <SingleValue>20.0</SingleValue>
          </Quantity>
        </Property>
        <Initial name="refractory_end">
          <Quantity units="ms">
            <SingleValue>0.0</SingleValue>
          </Quantity>
        </Initial>
        <Initial name="v">
          <Quantity units="mV">
            <RandomValue>
              <RandomDistributionProperties name="uniform_rest_to_threshold">
                <Definition name="UniformDistribution" url="../../randomdistribution/Uniform.xml"/>
                <Property name="maximum">
                  <Quantity units="unitless">
                    <SingleValue>20.0</SingleValue>
                  </Quantity>
                </Property>
                <Property name="minimum">
                  <Quantity units="unitless">
                    <SingleValue>0.0</SingleValue>
                  </Quantity>
                </Property>
              </RandomDistributionProperties>
            </RandomValue>
          </Quantity>
        </Initial>
      </DynamicsProperties>
    </Cell>
  </Population>
  <Projection name="Excitation">
    <Pre>
      <Reference name="Exc"/>
    </Pre>
    <Post>
      <Reference name="All"/>
    </Post>
    <Connectivity>
      <ConnectionRuleProperties name="RandomExc">
        <Definition name="RandomFanIn" url="../../connectionrule/RandomFanIn.xml"/>
        <Property name="number">
          <Quantity units="unitless">
            <SingleValue>400</SingleValue>
          </Quantity>
        </Property>
      </ConnectionRuleProperties>
    </Connectivity>
    <Response>
      <DynamicsProperties name="syn">
        <Definition name="Alpha" url="../../postsynapticresponse/Alpha.xml"/>
        <Property name="tau">
          <Quantity units="ms">
            <SingleValue>0.1</SingleValue>
          </Quantity>
        </Property>
        <Initial name="a">
          <Quantity units="nA">
            <SingleValue>0.0</SingleValue>
          </Quantity>
        </Initial>
        <Initial name="b">
          <Quantity units="nA">
            <SingleValue>0.0</SingleValue>
          </Quantity>
        </Initial>
      </DynamicsProperties>
    </Response>
    <Plasticity>
      <DynamicsProperties name="ExcitatoryPlasticity">
        <Definition name="Static" url="../../plasticity/Static.xml"/>
        <Property name="weight">
          <Quantity units="nA">
            <SingleValue>2.4</SingleValue>
          </Quantity>
        </Property>
      </DynamicsProperties>
    </Plasticity>
    <Delay>
      <Quantity units="ms">
        <SingleValue>1.5</SingleValue>
      </Quantity>
    </Delay>
    <AnalogPortConnection sender_role="response" receiver_role="post" send_port="i_synaptic"
      receive_port="i_synaptic"/>
    <AnalogPortConnection sender_role="plasticity" receiver_role="response" send_port="fixed_weight"
      receive_port="weight" />
    <EventPortConnection sender_role="pre" receiver_role="response" send_port="spike_output"
      receive_port="spike"/>
  </Projection>
  <Unit symbol="nA" dimension="current" power="-9"/>
  <Unit symbol="mV" dimension="voltage" power="-3"/>
  <Dimension i="-1" l="2" m="1" t="-3" name="voltage"/>
  <Dimension i="-2" l="2" m="1" t="-3" name="resistance"/>
  <Dimension i="1" name="current"/>
  <Population name="Ext">
    <Size>5000</Size>
    <Cell>
      <DynamicsProperties name="stim">
        <Definition name="Poisson" url="../../input/Poisson.xml"/>
        <Property name="rate">
          <Quantity units="Hz">
            <SingleValue>40000.0</SingleValue>
          </Quantity>
        </Property>
        <Initial name="t_next">
          <Quantity units="ms">
            <RandomValue>
              <RandomDistributionProperties name="exponential_beta">
                <Definition name="ExponentialDistribution" url="../../randomdistribution/Exponential.xml"/>
                <Property name="rate">
                  <Quantity units="unitless">
                    <SingleValue>0.025</SingleValue>
                  </Quantity>
                </Property>
              </RandomDistributionProperties>
            </RandomValue>
          </Quantity>
        </Initial>
      </DynamicsProperties>
    </Cell>
  </Population>
  <Projection name="Inhibition">
    <Pre>
      <Reference name="Inh"/>
    </Pre>
    <Post>
      <Reference name="All"/>
    </Post>
    <Connectivity>
      <ConnectionRuleProperties name="RandomInh">
        <Definition name="RandomFanIn" url="../../connectionrule/RandomFanIn.xml"/>
        <Property name="number">
          <Quantity units="unitless">
            <SingleValue>100</SingleValue>
          </Quantity>
        </Property>
      </ConnectionRuleProperties>
    </Connectivity>
    <Response>
      <DynamicsProperties name="syn">
        <Definition name="Alpha" url="../../postsynapticresponse/Alpha.xml"/>
        <Property name="tau">
          <Quantity units="ms">
            <SingleValue>0.1</SingleValue>
          </Quantity>
        </Property>
        <Initial name="a">
          <Quantity units="nA">
            <SingleValue>0.0</SingleValue>
          </Quantity>
        </Initial>
        <Initial name="b">
          <Quantity units="nA">
            <SingleValue>0.0</SingleValue>
          </Quantity>
        </Initial>
      </DynamicsProperties>
    </Response>
    <Plasticity>
      <DynamicsProperties name="InhibitoryPlasticity">
        <Definition name="Static" url="../../plasticity/Static.xml"/>
        <Property name="weight">
          <Quantity units="nA">
            <SingleValue>-14.4</SingleValue>
          </Quantity>
        </Property>
      </DynamicsProperties>
    </Plasticity>
    <Delay>
      <Quantity units="ms">
        <SingleValue>1.5</SingleValue>
      </Quantity>
    </Delay>
    <AnalogPortConnection sender_role="response" receiver_role="post" send_port="i_synaptic"
      receive_port="i_synaptic"/>
    <AnalogPortConnection sender_role="plasticity" receiver_role="response" send_port="fixed_weight"
      receive_port="weight" />
    <EventPortConnection sender_role="pre" receiver_role="response" send_port="spike_output"
      receive_port="spike"/>
  </Projection>
  <Population name="Inh">
    <Size>1000</Size>
    <Cell>
      <DynamicsProperties name="nrn">
        <Definition name="LeakyIntegrateAndFire" url="../../neuron/LeakyIntegrateAndFire.xml"/>
        <Property name="R">
          <Quantity units="Mohm">
            <SingleValue>1.5</SingleValue>
          </Quantity>
        </Property>
        <Property name="refractory_period">
          <Quantity units="ms">
            <SingleValue>2.0</SingleValue>
          </Quantity>
        </Property>
        <Property name="tau">
          <Quantity units="ms">
            <SingleValue>20.0</SingleValue>
          </Quantity>
        </Property>
        <Property name="v_reset">
          <Quantity units="mV">
            <SingleValue>10.0</SingleValue>
          </Quantity>
        </Property>
        <Property name="v_threshold">
          <Quantity units="mV">
            <SingleValue>20.0</SingleValue>
          </Quantity>
        </Property>
        <Initial name="refractory_end">
          <Quantity units="ms">
            <SingleValue>0.0</SingleValue>
          </Quantity>
        </Initial>
        <Initial name="v">
          <Quantity units="mV">
            <RandomValue>
              <RandomDistributionProperties name="uniform_rest_to_threshold">
                <Definition name="UniformDistribution" url="../../randomdistribution/Uniform.xml"/>
                <Property name="maximum">
                  <Quantity units="unitless">
                    <SingleValue>20.0</SingleValue>
                  </Quantity>
                </Property>
                <Property name="minimum">
                  <Quantity units="unitless">
                    <SingleValue>0.0</SingleValue>
                  </Quantity>
                </Property>
              </RandomDistributionProperties>
            </RandomValue>
          </Quantity>
        </Initial>
      </DynamicsProperties>
    </Cell>
  </Population>
  <Projection name="External">
    <Pre>
      <Reference name="Ext"/>
    </Pre>
    <Post>
      <Reference name="All"/>
    </Post>
    <Connectivity>
      <ConnectionRuleProperties name="OneToOne">
        <Definition name="OneToOne" url="../../connectionrule/OneToOne.xml"/>
      </ConnectionRuleProperties>
    </Connectivity>
    <Response>
      <DynamicsProperties name="syn">
        <Definition name="Alpha" url="../../postsynapticresponse/Alpha.xml"/>
        <Property name="tau">
          <Quantity units="ms">
            <SingleValue>0.1</SingleValue>
          </Quantity>
        </Property>
        <Initial name="a">
          <Quantity units="nA">
            <SingleValue>0.0</SingleValue>
          </Quantity>
        </Initial>
        <Initial name="b">
          <Quantity units="nA">
            <SingleValue>0.0</SingleValue>
          </Quantity>
        </Initial>
      </DynamicsProperties>
    </Response>
    <Plasticity>
      <DynamicsProperties name="ExternalPlasticity">
        <Definition name="Static" url="../../plasticity/Static.xml"/>
        <Property name="weight">
          <Quantity units="nA">
            <SingleValue>2.4</SingleValue>
          </Quantity>
        </Property>
      </DynamicsProperties>
    </Plasticity>
    <Delay>
      <Quantity units="ms">
        <SingleValue>1.5</SingleValue>
      </Quantity>
    </Delay>
    <AnalogPortConnection sender_role="response" receiver_role="post" send_port="i_synaptic"
      receive_port="i_synaptic"/>
    <AnalogPortConnection sender_role="plasticity" receiver_role="response" send_port="fixed_weight"
      receive_port="weight" />
    <EventPortConnection sender_role="pre" receiver_role="response" send_port="spike_output"
      receive_port="spike"/>
  </Projection>
  <Unit symbol="ms" dimension="time" power="-3"/>
  <Dimension name="time" t="1"/>
  <Unit symbol="Mohm" dimension="resistance" power="6"/>
  <Dimension name="dimensionless"/>
  <Unit symbol="unitless" dimension="dimensionless" power="0"/>
</NineML>
