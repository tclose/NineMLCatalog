<?xml version='1.0' encoding='UTF-8'?>
<NineML xmlns="http://nineml.net/9ML/1.0">
  <Dynamics name="Izhikevich2003">
    <Parameter dimension="per_time" name="a"/>
    <Parameter dimension="voltage" name="c"/>
    <Parameter dimension="per_time" name="b"/>
    <Parameter dimension="voltage_per_time" name="d"/>
    <Parameter dimension="current_time_per_voltage" name="Cm"/>    
    <Parameter dimension="voltage" name="vthresh"/>
    <EventReceivePort name="incoming_spike"/>
    <Parameter dimension="voltage" name="weight"/>
    <AnalogReducePort operator="+" dimension="current" name="iExt"/>
    <EventSendPort name="spike"/>
    <StateVariable dimension="voltage_per_time" name="u"/>
    <StateVariable dimension="voltage" name="v"/>
    <Regime name="subthreshold">
      <TimeDerivative variable="u">
        <MathInline>a*(b*v - u)</MathInline>
      </TimeDerivative>
      <TimeDerivative variable="v">
        <MathInline>const1*v*v + const2*v + const3 - u + iExt/Cm</MathInline>
      </TimeDerivative>
      <OnEvent target_regime="subthreshold" port="incoming_spike">
        <StateAssignment variable="v">
          <MathInline>v + weight</MathInline>
        </StateAssignment>
      </OnEvent>
      <OnCondition target_regime="subthreshold">
        <Trigger>
          <MathInline>v &gt; vthresh</MathInline>
        </Trigger>
        <StateAssignment variable="u">
          <MathInline>d + u</MathInline>
        </StateAssignment>
        <StateAssignment variable="v">
          <MathInline>c</MathInline>
        </StateAssignment>
        <OutputEvent port="spike"/>
      </OnCondition>
    </Regime>
    <Constant units="per_mV_ms" name="const1" value="0.04"/>
    <Constant units="per_ms" name="const2" value="5.0"/>
    <Constant units="mV_per_ms" name="const3" value="140.0"/>    
  </Dynamics>
  <DynamicsProperties name="Izhikevich2003Properties">
    <Definition name="Izhikevich2003"/>
    <Property name="Cm">
      <Quantity units="pF">
        <SingleValue>1</SingleValue>
      </Quantity>
    </Property>
    <Property name="a">
      <Quantity units="per_ms">
        <SingleValue>0.02</SingleValue>
      </Quantity>
    </Property>
    <Property name="b">
      <Quantity units="per_ms">
        <SingleValue>0.2</SingleValue>
      </Quantity>
    </Property>
    <Property name="c">
      <Quantity units="mV">
        <SingleValue>-65.0</SingleValue>
      </Quantity>
    </Property>
    <Property name="d">
      <Quantity units="mV_per_ms">
        <SingleValue>2.0</SingleValue>
      </Quantity>
    </Property>
    <Property name="vthresh">
      <Quantity units="mV">
        <SingleValue>30.0</SingleValue>
      </Quantity>
    </Property>
    <Property name="weight">
      <Quantity units="mV">
        <SingleValue>5</SingleValue>
      </Quantity>
    </Property>
  </DynamicsProperties>
  <Dynamics name="Izhikevich2007">
    <Parameter name="a" dimension="per_time"/>
    <Parameter name="b" dimension="conductance_per_voltage2"/>
    <Parameter name="c" dimension="voltage"/>
    <Parameter name="k" dimension="conductance_per_voltage"/>
    <Parameter name="Vr" dimension="voltage"/>
    <Parameter name="Vt" dimension="voltage"/>
    <Parameter name="Vb" dimension="voltage"/>
    <Parameter name="Vpeak" dimension="voltage"/>
    <Parameter name="Cm" dimension="capacitance"/>
    <AnalogReducePort name="iSyn" dimension="current" operator="+"/>
    <AnalogReceivePort name="iExt" dimension="current"/>
    <AnalogSendPort name="U" dimension="current"/>
    <AnalogSendPort name="V" dimension="voltage"/>
    <EventSendPort name="spikeOutput"/>
    <StateVariable name="V" dimension="voltage"/>
    <StateVariable name="U" dimension="current"/>
    <Regime name="subthresholdRegime">
      <TimeDerivative variable="U">
        <MathInline>a * (b * pow(V - Vb, 3) - U)</MathInline>
      </TimeDerivative>
      <TimeDerivative variable="V">
        <MathInline>V_deriv</MathInline>
      </TimeDerivative>
      <OnCondition target_regime="subthresholdRegime">
        <Trigger>
          <MathInline>V &gt; Vpeak</MathInline>
        </Trigger>
        <StateAssignment variable="V">
          <MathInline>c</MathInline>
        </StateAssignment>
        <OutputEvent port="spikeOutput"/>
      </OnCondition>
      <OnCondition target_regime="subVbRegime">
        <Trigger>
          <MathInline>V &lt; Vb</MathInline>
        </Trigger>
      </OnCondition>
    </Regime>
    <Regime name="subVbRegime">
      <TimeDerivative variable="U">
        <MathInline>-U * a</MathInline>
      </TimeDerivative>
      <TimeDerivative variable="V">
        <MathInline>V_deriv</MathInline>
      </TimeDerivative>
      <OnCondition target_regime="subthresholdRegime">
        <Trigger>
          <MathInline>V &gt; Vb</MathInline>
        </Trigger>
      </OnCondition>
    </Regime>
    <Alias name="V_deriv">
      <MathInline>(k * (V - Vr) * (V - Vt) - U + iSyn + iExt) / Cm</MathInline>
    </Alias>
  </Dynamics>
  <DynamicsProperties name="Izhikevich2007Properties">
    <Definition name="Izhikevich2007"/>
    <Property name="a">
      <Quantity units="per_ms">
        <SingleValue>0.2</SingleValue>
      </Quantity>
    </Property>
    <Property name="b">
