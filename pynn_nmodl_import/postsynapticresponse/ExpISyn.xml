      <TimeDerivative variable="i">
        <MathInline>-i/tau</MathInline>
      </TimeDerivative>
      <OnEvent target_regime="regime_0" port="incoming_spike">
        <StateAssignment variable="i">
          <MathInline>i - weight</MathInline>
        </StateAssignment>
      </OnEvent>
    </Regime>
  </Dynamics>  
  <DynamicsProperties name="PyNNExpISynPropertis">
    <Definition>ExpISyn</Definition>
