<?xml version='1.0' encoding='UTF-8'?>
<NineML xmlns="http://nineml.net/9ML/1.0">
  <Dynamics name="StdpSA">
    <Parameter dimension="dimensionless" name="allow_update_on_post"/>
    <Parameter dimension="time" name="tauLTP"/>
    <Parameter dimension="dimensionless" name="aLTD"/>
    <Parameter dimension="dimensionless" name="wmax"/>
    <Parameter dimension="dimensionless" name="wmin"/>
    <Parameter dimension="time" name="tauLTD"/>
    <Parameter dimension="dimensionless" name="aLTP"/>
    <EventReceivePort name="incoming_spike"/>
    <AnalogReceivePort dimension="dimensionless" name="w"/>
    <AnalogSendPort dimension="dimensionless" name="wsyn"/>
    <StateVariable dimension="time" name="tlast_post"/>
    <StateVariable dimension="time" name="tlast_pre"/>
    <StateVariable dimension="dimensionless" name="deltaw"/>
    <StateVariable dimension="time" name="interval"/>
    <StateVariable dimension="dimensionless" name="M"/>
    <StateVariable dimension="dimensionless" name="P"/>
    <StateVariable dimension="dimensionless" name="wsyn"/>
    <Regime name="regime_0">
      <OnEvent target_regime="regime_0" port="incoming_spike">
        <StateAssignment variable="tlast_post">
          <MathInline>((w &gt;= 0) ? ( tlast_post ) : ( t ))</MathInline>
        </StateAssignment>
        <StateAssignment variable="tlast_pre">
          <MathInline>((w &gt;= 0) ? ( t ) : ( tlast_pre ))</MathInline>
        </StateAssignment>
        <StateAssignment variable="deltaw">
          <MathInline>((w &gt;= 0) ? ( 0.0 ) : ((w &gt;= 0) ? ( M*wmax*exp(interval/tauLTD) + deltaw ) : ( P*wmax*exp(-interval/tauLTP) + deltaw )))</MathInline>
        </StateAssignment>
        <StateAssignment variable="interval">
          <MathInline>((w &gt;= 0) ? ( -t + tlast_post ) : ( t - tlast_pre ))</MathInline>
        </StateAssignment>
        <StateAssignment variable="M">
          <MathInline>((w &gt;= 0) ? ( M ) : ( M*exp((-t + tlast_post)/tauLTD) - aLTD ))</MathInline>
        </StateAssignment>
        <StateAssignment variable="P">
          <MathInline>((w &gt;= 0) ? ( P*exp((-t + tlast_pre)/tauLTP) + aLTP ) : ( P ))</MathInline>
        </StateAssignment>
        <StateAssignment variable="wsyn">
          <MathInline>(((w &gt;= 0) &amp;&amp; wsyn &lt; wmin) ? ( wmin ) : (((w &gt;= 0) &amp;&amp; wsyn &gt; wmax) ? ( wmax ) : ((w &gt;= 0) ? ( deltaw + wsyn ) : ( wsyn ))))</MathInline>
        </StateAssignment>
      </OnEvent>
    </Regime>
  </Dynamics>
  <DynamicsProperties name="StdpSAProperties">
    <Definition>StdpSA</Definition>
    <Property units="unitless" name="aLTD">
      <SingleValue>0.00106</SingleValue>
    </Property>
    <Property units="unitless" name="aLTP">
      <SingleValue>0.001</SingleValue>
    </Property>
    <Property units="ms" name="tauLTD">
      <SingleValue>20.0</SingleValue>
    </Property>
    <Property units="ms" name="tauLTP">
      <SingleValue>20.0</SingleValue>
    </Property>
    <Property units="unitless" name="wmax">
      <SingleValue>1.0</SingleValue>
    </Property>
    <Property units="unitless" name="wmin">
      <SingleValue>0.0</SingleValue>
    </Property>
  </DynamicsProperties>  
  <Dimension name="dimensionless"/>
  <Dimension name="time" t="1"/>
  <Unit symbol="unitless" dimension="dimensionless" power="0"/>
  <Unit symbol="ms" dimension="time" power="-3"/>  
</NineML>
