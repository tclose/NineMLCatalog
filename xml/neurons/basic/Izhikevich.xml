        <SingleValue>1</SingleValue>
      </Quantity>
    </Property>
    <Property name="Vpeak">
      <Quantity units="mV">
        <SingleValue>25</SingleValue>
      </Quantity>
    </Property>
    <Property name="Vr">
      <Quantity units="mV">
        <SingleValue>-55</SingleValue>
      </Quantity>
    </Property>
    <Property name="Vb">
      <Quantity units="mV">
        <SingleValue>-55</SingleValue>
      </Quantity>
    </Property>
    <Property name="Vt">
      <Quantity units="mV">
        <SingleValue>-40</SingleValue>
      </Quantity>
    </Property>
    <Property name="Cm">
      <Quantity units="uF">
        <SingleValue>20</SingleValue>
      </Quantity>
    </Property>
  </DynamicsProperties>
  <Dimension name="dimensionless"/>
  <Dimension name="voltage" m="1" l="2" t="-3" i="-1"/>
  <Dimension name="conductance_per_voltage2" m="-3" l="-6" t="9" i="4"/>
  <Dimension name="conductance_per_voltage" m="-2" l="-4" t="6" i="3"/>
  <Dimension name="capacitance" m="-1" l="-2" t="4" i="2"/>
  <Dimension name="current" i="1"/>
  <Dimension name="per_time" t="-1"/>
  <Dimension name="per_time_voltage" i="1" l="-2" m="-1" t="2"/>
  <Dimension i="2" l="-2" m="-1" t="4" name="current_time_per_voltage"/>
  <Dimension i="-1" l="2" m="1" t="-4" name="voltage_per_time"/>  
  <Unit symbol="none" dimension="dimensionless"/>
  <Unit symbol="per_ms" dimension="per_time" power="0"/>
  <Unit symbol="mV" dimension="voltage" power="-3"/>
  <Unit symbol="uF" dimension="capacitance" power="-6"/>
  <Unit symbol="pA" dimension="current" power="-12"/>
  <Unit symbol="uS_per_mV2" dimension="conductance_per_voltage2" power="0"/>
  <Unit symbol="uS_per_mV" dimension="conductance_per_voltage" power="0"/>  
  <Unit symbol="mV_per_ms" dimension="voltage_per_time" power="0"/>
  <Unit symbol="pF" dimension="capacitance" power="-12"/>
  <Unit symbol="per_mV_ms" dimension="per_time_voltage" power="6"/>
</NineML>
